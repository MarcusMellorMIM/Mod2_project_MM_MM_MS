<h2> Join <%= @team.name %> to Competitions 🏆 </h2>

<%= form_tag("/campaigns", method: "POST") %>
<%= hidden_field_tag "team_id", @team.id %>

<div class="competition-box-index"><% Competition.all.each do |competition| %>
  <p><%= competition.name %><%= check_box_tag 'competition_ids[]', competition.id %></p>
<% end %>
</div>

<%= submit_tag "Add Competitions", :class=>"button" %>
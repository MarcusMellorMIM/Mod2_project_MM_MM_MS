<h2>Create a Competition 🏆</h2>

<div class="competition-box-index" >
<%= form_for @competition do |f| %>
    <%= f.label :name  %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :knockout %>
    <%= f.check_box :knockout %>
    <br>
    <br>
    
    <%= f.label :team_ids, "Select Teams:" %> <br>
    <%= f.collection_check_boxes :team_ids, Team.all, :id, :name, :class=>"container" %>

    <br>
    <br>
    <%= f.submit "Create", :class=>"button"%>
   
<%end%>
</div>

